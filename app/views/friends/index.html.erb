<!-- <h1>Friend List</h1> -->

<div id="friends">
  <table class="table table-hover table-striped">
    <thead class="table-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th scope="col">User id</th>
        <th scope="col">Show Friend</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td>
            <%= friend.first_name %>
          </td>
          <td>
            <%= friend.last_name %>
          </td>
          <td>
            <%= friend.email %>
          </td>
          <td>
            <%= friend.phone %>
          </td>
          <td>
            <%= friend.twitter %>
          </td>
          <td>
            <%= friend.user_id %>
          </td>
          <td>
            <%= link_to "Show" , friend %>
          </td>
          <td>
            <%= link_to 'Delete', friend, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
          </td>
        </tr>
          <% end %>
    </tbody>
  </table>

</div>


<%= link_to "New friend" , new_friend_path, class:"btn btn-secondary" %>